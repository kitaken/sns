<h1>Listing events</h1>

<% @events.each do |event| %>
	<h2><%= h event.title %></h2>
	<p><%= h event.body %></p>
	<table>
		<tr><th>Start</th><td><%= event.start %></td></tr>
		<tr><th>End</th><td><%= event.end %></td></tr>
	</table>
	<p><%= link_to 'Show', event %> <%= link_to 'Edit', edit_event_path(event) %> <%= link_to 'Destroy', event, confirm: 'Are you sure?', method: :delete %></p>
<% end %>

