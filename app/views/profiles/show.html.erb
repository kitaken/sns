<p id="notice"><%= notice %></p>
<div id="pic">
  <%= image_tag @profile.avatar.url(:medium) %>
</div>
<div id="main">
<p>
  <b>Nick name:</b>
  <%= @profile.nick_name %>
</p>

<p>
  <b>Real name:</b>
  <%= @profile.real_name %>
</p>

<p>
  <b>Affiliation:</b>
  <%= @profile.affiliation %>
</p>

<p>
  <b>Gender:</b>
  <%= @profile.gender %>
</p>

<p>
  <b>Introduction:</b>
  <%= @profile.introduction %>
</p>

<% @friend = Friend.find_by_user_id_and_other_user_id(current_user.id, @profile.user_id) %>

<% if @friend then %>
<%= link_to("Block",     :controller => "friends", :action => :block, :user_id => current_user.id, :other_user_id => @profile.user_id) %>
<% elsif @profile.user_id != current_user.id %>
<%= link_to("Applicate", :controller => "friends", :action => :applicate, :id => current_user.id, :other_user_id => @profile.user_id ) %>
<%= link_to("Block",     :controller => "friends", :action => :block, :id => current_user.id, :other_user_id => @profile.user_id) %>
<% end %>

</div>


<%= link_to 'Edit', edit_profile_path(@profile) %> |
<%= link_to 'Back', profiles_path %>
