<h1>Listing profiles</h1>

<table>
  <tr>
    <th>User</th>
    <th>Nick name</th>
    <th>Real name</th>
    <th>Affiliation</th>
    <th>Gender</th>
    <th>Introduction</th>
    <th>Pic</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @profiles.each do |profile| %>
  <tr>
    <td><%= profile.user_id %></td>
    <td><%= profile.nick_name %></td>
    <td><%= profile.real_name %></td>
    <td><%= profile.affiliation %></td>
    <td><%= profile.gender %></td>
    <td><%= profile.introduction %></td>
    <td><%= image_tag( profile.thumbnail.url,:size => '50x50') %><td>
    <td><%= link_to 'Show', profile %></td>
    <td><%= link_to 'Edit', edit_profile_path(profile) %></td>
    <td><%= link_to 'Destroy', profile, confirm: 'Are you sure?', method: :delete %></td>
  </tr>
<% end %>
</table>

