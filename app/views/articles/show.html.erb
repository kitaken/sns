<p id="notice"><%= notice %></p>

<h2><%= h @article.title %></h2>
<p><%= h @article.category.name %></p>
<% if @article.type == 'auto_published' %>
	<p><%= link_to @article.url %></p>
<% else %>
	<p>by <%= @article.user.nickname %></p>
<% end %>
<p>
  <%= h @article.body %>
</p>
<% if @article.type == 'auto_published' %>
	<h2>Translations</h2>
  <p><%= link_to 'Create Your New Translation', new_article_translation_path(@article) %></p>
	<% @article.translations.each do |translation| %>
		<h3><%= h translation.title %></h3>
		<p><%= h translation.body %></p>
		<p><%= link_to 'permalink', article_translation_path(translation) %></p>
	<% end %>
<% end %>


<%= link_to 'Edit', edit_article_path(@article) %> |
<%= link_to 'Back', articles_path %>
